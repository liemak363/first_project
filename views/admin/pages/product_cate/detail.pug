extends ../../layouts/default.pug

block main
    if (record.title)
        h1(class="mb-4") #{record.title}

    if (record.parent_id)
        div(class="mb-4") Giá: <b>#{record.parent_id}$</b>

    if (record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail style="width: 100px"
            )
    
    if (record.status) 
        div(class="mb-4") 
            span Trạng thái:
                if (record.status === "active")
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-danger") Dừng hoạt động

    if (record.position)
        div(class="mb-4") Vị trí: <b>#{record.position}</b>
    if (record.description)
        div(class="mb-4") !{record.description}

    a(href=`${prefixAdmin}/product-category/edit/${record.id}`)
        button(class="btn btn-warning btn-sm") Sửa
    a(href=`${prefixAdmin}/product-category`)
        button(class="btn btn-primary btn-sm") Về trang danh sách

    script(src="/admin/js/product.js")