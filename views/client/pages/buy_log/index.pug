extends ../../layouts/default.pug 
include ../../mixins/pagination.pug

block main 
    h1 Lịch sử mua hàng 

    .card.mb-3
        .card-header Danh sách
            .card-body
                table(
                    class="table table-hover table-sm"
                    table-products
                )
                    thead 
                        th STT
                        th Hình ảnh 
                        th Tiêu đề 
                        th Giá
                        th Số lượng
                        th Tổng
                        th Ngày mua
                        th Hành động

                    tbody
                        each item, index in records 
                            tr
                                td #{index + 1}
                                td
                                    img(
                                        src=`${item.thumbnail}`
                                        alt=`${item.description}`
                                        width="100px"
                                        height="auto"
                                    )
                                
                                td #{item.title}
                                td #{item.price}$
                                td #{item.quantity}
                                td #{item.total}$
                                td #{item.createdAt}
                                td
                                    a(href=`/products/detail/${item.slug}`)
                                        button(class="btn btn-info btn-sm") Chi tiết

    +pagination(pagination)

    script(src="/js/pagination.js")